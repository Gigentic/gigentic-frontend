{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./web/*"],
      "@gigentic-frontend/anchor": ["anchor/src/index.ts"],
      "@gigentic-frontend/anchor/types": ["anchor/target/types/gigentic.ts"],
      "@gigentic-frontend/ui-kit/ui": ["libs/ui-kit/ui/src/index.ts"],
      "@gigentic-frontend/ui-kit/ui/*": ["libs/ui-kit/ui/src/*"],
      "@gigentic-frontend/ui-kit/util": ["libs/ui-kit/util/src/index.ts"],
      "@gigentic-frontend/ui-kit/util/*": ["libs/ui-kit/util/src/*"],
      "@/components/*": ["web/components/*"],
      "@/cluster/*": ["web/components/cluster/*"],
      "@/providers/*": ["web/components/providers/*"],
      "@/ui/*": ["web/components/ui/*"],
      "@/hooks/*": ["web/lib/hooks/*"],
      "@/types/*": ["web/lib/types/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
